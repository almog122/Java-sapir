import java.util.Scanner;
public class task {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner (System.in);
		
		int num, i, j;
		
		System.out.println("Enter a number");
		num = sc.nextInt();
		
		for(i = 0; i < num; i++)
		{
			System.out.print("X");
			System.out.print("O");
			
			for(j = 0; j < i; j++)
			{
				System.out.print("/n");
				System.out.print("O");
				System.out.print("X");
			}
		}

	}

}
